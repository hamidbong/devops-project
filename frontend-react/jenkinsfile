def SERVICE_NAME = 'frontend-react'  // adapter √† chaque fichier

pipeline {
    agent any

    tools {
        nodejs 'Node22'
    }

    environment {
        AUTH_TOKEN_SONAR = credentials('SONAR_AUTH_TOKEN')
        IMAGE_NAME = "hamidbong/${SERVICE_NAME}"
    }

    stages {

        stage('Check versions') {
            steps {
                sh 'node -v'
                sh 'npm -v'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install & Verify Lock') {
            steps {
                dir("${SERVICE_NAME}") {
                    // D'abord v√©rifier si les fichiers sont synchronis√©s
                    sh 'git status --porcelain package-lock.json || true'
                    
                    // Ensuite installer
                    sh 'npm install --no-audit'
                    
                    // V√©rifier l'installation
                    sh 'npm list react-scripts'
                }
            }
        }

        stage('Run Tests') {
            steps {
                dir("${SERVICE_NAME}") {
                    sh 'npm test -- --coverage'
                }
            }   
        }

        /*stage('OWASP Dependency-Check') {
            steps {
                dir("${SERVICE_NAME}") {
                    withCredentials([string(credentialsId: 'nvd-api-key', variable: 'NVD_API_KEY')]) {
                        dependencyCheck additionalArguments: '''
                            -s .
                            -o ./dependency-check-report
                            -f ALL
                            --prettyPrint
                            --nvdApiDelay=2000
                            --nvdApiKey=${NVD_API_KEY}
                        ''',
                        odcInstallation: 'dependency-check-12.1.9'
                    }

                    dependencyCheckPublisher pattern: 'dependency-check-report/dependency-check-report.xml',
                        failedTotalCritical: 1,
                        unstableTotalHigh: 1

                    archiveArtifacts artifacts: 'dependency-check-report/**', allowEmptyArchive: false
                }
            }
        }

        stage('V√©rification vuln√©rabilit√©s') {
            steps {
                script {
                    def report = readFile("${SERVICE_NAME}/dependency-check-report/dependency-check-report.xml")
                    if (report.contains('<baseSeverity>CRITICAL</baseSeverity>') || report.contains('<severity>critical</severity>')) {
                        error("Vuln√©rabilit√©s CRITIQUES d√©tect√©es ‚Äî arr√™t du pipeline.")
                    }
                }
            }
        }*/

        /*stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('Sonarqube') { // nom d√©fini dans Jenkinssss
                    script {
                        def nodePath = sh(returnStdout: true, script: 'which node').trim()
                        def scannerHome = tool('SonarScanner')

                        sh """
                            ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=${SERVICE_NAME} \
                            -Dsonar.projectName=${SERVICE_NAME} \
                            -Dsonar.projectVersion=${env.BUILD_NUMBER} \
                            -Dsonar.sources=${SERVICE_NAME} \
                            -Dsonar.exclusions=node_modules/**,dist/**,build/**,coverage/**,.venv/**,target/** \
                            -Dsonar.nodejs.executable=${nodePath} \
                            -Dsonar.javascript.lcov.reportPaths=${SERVICE_NAME}/coverage/lcov.info
                        """
                    }
                }
            }
        }

        stage("Quality Gates") {
            steps {
                retry(5) {
                    timeout(time: 2, unit: 'MINUTES') {
                        script {
                            def qg = waitForQualityGate()
                            if (qg.status != 'OK') {
                                error "Pipeline aborted due to quality gate failure: ${qg.status}"
                            }
                        }
                    }
                }
            }
        }*/

        stage('Check Docker Daemon') {
            steps {
                sh 'docker version'
            }
        }

        /*stage('Build Docker Image') {
            steps {
                dir("${SERVICE_NAME}") {
                    timeout(time: 15, unit: 'MINUTES') {
                        script {
                            dockerImage = docker.build("${IMAGE_NAME}:${env.BUILD_ID}")
                        }
                    }
                }
            }
        }*/

        stage('Build Docker Image') {
            steps {
                dir("${SERVICE_NAME}") {
                    timeout(time: 15, unit: 'MINUTES') {
                        script {
                            // Nettoyer le cache Docker avant de build
                            sh 'docker system prune -f'
                            dockerImage = docker.build("${IMAGE_NAME}:${env.BUILD_ID}", "--no-cache .")
                        }
                    }
                }
            }
        }

        /*stage('Setup Trivy Caches') {
            steps {
                sh 'docker volume create --name trivy_cache || true'
                sh 'docker volume create --name trivy_javadb_cache || true'
            }
        }

        stage('Security Scan - Trivy') {
            steps {
                dir("${SERVICE_NAME}") {
                    script {
                        // G√©n√©rer un rapport d√©taill√© sans faire √©chouer le build imm√©diatementt
                        sh '''
                            docker run --rm \
                                -v /var/run/docker.sock:/var/run/docker.sock \
                                -v trivy_cache:/root/.cache/trivy \
                                aquasec/trivy:latest \
                                image ${IMAGE_NAME}:${BUILD_ID} \
                                --severity CRITICAL,HIGH,MEDIUM \
                                --ignore-unfixed \
                                --format json \
                                --output trivy-detailed-report.json \
                                --exit-code 0  # Ne pas faire √©chouer le build ici
                        '''
                        
                        // Afficher un r√©sum√© lisible
                        sh '''
                            docker run --rm \
                                -v /var/run/docker.sock:/var/run/docker.sock \
                                -v trivy_cache:/root/.cache/trivy \
                                aquasec/trivy:latest \
                                image ${IMAGE_NAME}:${BUILD_ID} \
                                --severity CRITICAL,HIGH \
                                --ignore-unfixed \
                                --exit-code 0
                        '''
                        
                        archiveArtifacts artifacts: 'trivy-detailed-report.json', allowEmptyArchive: true
                    }
                }
            }
        }*/

        stage('Push Docker Image') {
            steps {
                dir("${SERVICE_NAME}") {
                    script {
                        docker.withRegistry('https://index.docker.io/v1/', 'dockerHub-login') {
                            dockerImage.push()
                            dockerImage.push('latest')
                        }
                    }
                }
            }
        }
        
        stage('Cleanup Docker') {
            steps {
                script {
                    // Supprime l'image locale apr√®s le push
                    sh "docker rmi ${IMAGE_NAME}:${env.BUILD_ID} || true"
                    sh "docker rmi ${IMAGE_NAME}:latest || true"
                    
                    // Optionnel : Nettoyage des images "<none>" (dangling)
                    sh "docker image prune -f || true"
                }
            }
        }

        stage('Apply Kubernetes Files') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig']) {
                    sh """
                        cat k8s/${SERVICE_NAME}/deployment.yaml | \
                        sed "s/{{BUILD_NUMBER}}/${env.BUILD_ID}/g" | kubectl apply -f -
                        kubectl apply -f k8s/${SERVICE_NAME}/service.yaml
                        kubectl apply -f k8s/${SERVICE_NAME}/ingress.yaml
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig']) {
                    sh "kubectl rollout status deployment/${SERVICE_NAME}-deployment --timeout=300s"
                    sh "kubectl wait --for=condition=ready pod -l app=${SERVICE_NAME}-deployment --timeout=300s"
                }
            }
        }

        stage('Git Tag') {
            when {
                branch 'main'
            }
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-login', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_PASS')]) {
                    sh """
                        # D√©shallow pour pouvoir taguer
                        git fetch --unshallow || echo 'd√©j√† complet'

                        # Config Git pour Jenkins
                        git config user.name "Jenkins CI"
                        git config user.email "brahbong@gmail.com"

                        # Tag bas√© sur le num√©ro du build
                        VERSION_TAG="v${BUILD_NUMBER}"

                        # Cr√©ation du tag
                        git tag \$VERSION_TAG

                        # Push s√©curis√© (HTTPS + token)
                        git push https://\$GIT_USER:\$GIT_PASS@github.com/hamidbong/devops-project.git \$VERSION_TAG
                    """
                }
            }
        }
    }

    post {
        always {
            echo "üßæ Pipeline completed on build #${env.BUILD_NUMBER}"
            // Archive artifacts are now done within their respective stages
        }
        success {
            echo '‚úÖ Build succeeded!'
        }
        failure {
            echo '‚ùå Build failed!'
        }
    }
}