pipeline {
    agent any

    environment {
        // Tu pourras définir d’autres variables ici si besoin
        IMAGE_TAG = "${env.BUILD_NUMBER}"
        IMAGE_NAME = "hamidbong/docker-quickstart"
        
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        /*stage('Build Image') {
            steps {
                sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                sh "docker push ${IMAGE_NAME}:${IMAGE_TAG}"
            }
        }*/

        stage('Build Docker Image') {
            steps {
                dir('gestion-prod-service') {
                    script {
                        // Build the image lloocally////////
                        docker.build("${IMAGE_NAME}:${IMAGE_TAG}")
                    }
                }
            }
        }

        stage('Apply Kubernetes Files') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig']) {
                    sh 'cat k8s/deployment.yaml | sed "s/{{BUILD_NUMBER}}/${BUILD_NUMBER}/g" | kubectl apply -f -'
                    sh 'kubectl apply -f k8s/service.yaml'
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                withKubeConfig([credentialsId: 'kubeconfig']) {
                    sh 'kubectl rollout status deployment/my-app'
                }
            }
        }
    }
}
