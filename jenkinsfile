pipeline {
    agent any

    tools {
        maven 'Maven 3.8.6'   // Ou autre outil de build
    }

    environment {
        SONARQUBE = 'sonarqube_devops_master_analyse' // Le nom d√©fini dans Jenkins
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                dir('app') {
                    sh 'mvn clean install'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE}") {
                    dir('app') {
                        sh 'mvn sonar:sonar -Dsonar.projectKey=ci-cd-demo -Dsonar.host.url=http://192.168.100.32:9000 -Dsonar.login=${sonarqube}'
                    }
                }
            }
        }
        /*stage("Quality Gate") {
            steps {
                script {
                    echo "Checking SonarQube task status..."
                    def qg = waitForQualityGate abortPipeline: true
                    echo "Quality Gate status: ${qg.status}"  // Logs PASSED/FAILED
                }
            }
        }*/
        stage("Quality Gates") {
            steps {
                retry(3) {
                    timeout(time: 5, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true
                    }
                }
            }
        }

        stage('Build and Push Docker Image') {
        // Replace with your Jenkins credentials ID for Docker Hub
            docker.withRegistry('https://index.docker.io/v1/', 'dockerHub-login') {
                def customImage = docker.build("hamidbong/webapp:${env.BUILD_ID}")
                customImage.push()
            }
        }
        
        /*stage("Quality Gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }*/
    }
}
